<%- include('./partials/Header.ejs', {hidden: true}) %>
<div class="wrapper bg-[]">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-6 text-gray-800">Your Orders</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% orders.forEach(order => { %>
            <div class="bg-white shadow-md rounded-lg p-6">
              <h2 class="text-xl font-semibold text-gray-700 mb-2">Order <%= order._id %></h2>
              <p class="text-gray-600 mb-4"><strong>Status:</strong> <%= order.status %></p>
              <p class="text-gray-600 mb-4"><strong>Total Price:</strong> $<%= order.totalPrice %></p>
              <h3 class="text-lg font-semibold text-gray-700 mb-2">Items:</h3>
              <ul class="mb-4">
                <% order.items.forEach(item => { %>
                  <li class="mb-2">
                    <p><strong>Product:</strong> <span onclick="window.location.href='/products/<%=item.productId._id%>'" class="text-blue-500 cursor-pointer"><%= item.productId.title %> </span></p>
                    <p><strong>Quantity:</strong> <%= item.quantity %></p>
                  </li>
                <% }) %>
              </ul>
              <h3 class="text-lg font-semibold text-gray-700 mb-2">Shipping Address:</h3>
              <p class="text-gray-600 mb-1"><%= order.shippingAddress.street %></p>
              <p class="text-gray-600 mb-1"><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> <%= order.shippingAddress.zip %></p>
              <p class="text-gray-600 mb-4">Ordered on <%= order.createdAt.toDateString() %></p>
            </div>
          <% }) %>
        </div>
      </div>
</div>
<%- include('./partials/Footer.ejs') %>