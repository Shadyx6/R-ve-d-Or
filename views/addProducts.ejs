<%- include('./partials/Header.ejs', {hidden: true}) %>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-gray-800 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-2xl font-bold">Admin Panel</a>
            <a href="#" class="text-sm">Logout</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <div class="flex flex-col md:flex-row">

            <!-- Sidebar -->
            <div class="w-full md:w-1/4 bg-gray-200 p-4">
                <h2 class="text-lg font-semibold mb-4">Navigation</h2>
                <ul>
                    <li><a href="#" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Dashboard</a></li>
                    <li><a href="#" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Products</a></li>
                    <li><a href="#" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Orders</a></li>
                </ul>
            </div>

            <!-- Main Content Area -->
            <div class="w-full md:w-3/4 p-4 relative">
                <div class="w-[97%] h-[97.8%] p-4 bg-red-200 absolute hidden ">
                    <h2 class="text-2xl font-semibold mb-4">Your products and their status</h2>
                    <div class="flex flex-wrap h-full w-full gap-3 p-4">
                        <div class="container flex-col flex relative h-80 w-64">
                        <div class="w-full h-64 bg-white"></div>
                        <div class="text-black text-center flex flex-col gap-2">
                            <h2 class="w-full text-center mt-4 text-xl" >title</h2>
                            <h2 class="px-4 w-full text-center py-2 bg-blue-200 rounded-lg">status</h2>
                        </div>
                    </div>
                    </div>
                </div>
                <h2 class="text-2xl font-semibold mb-4">Upload Clothing Product</h2>
                <form action="/push" method="POST">
                    <div class="mb-4">
                        <label for="title" class="block mb-2">Title</label>
                        <input type="text" id="title" name="title" class="w-full px-4 py-2 border rounded">
                    </div>
                    <div class="mb-4">
                        <label for="description" class="block mb-2">Description</label>
                        <textarea id="description" name="description" rows="4"
                            class="w-full px-4 py-2 border rounded"></textarea>
                    </div>
                    <div class="mb-4">
                        <label for="price" class="block mb-2">Price</label>
                        <input type="text" id="price" name="price" class="w-full px-4 py-2 border rounded">
                    </div>
                    <div class="mb-4">
                        <label for="size" class="block mb-2">Gender</label>
                        <select id="size" name="size" class="w-full px-4 py-2 border rounded">
                            <option value="men">Men</option>
                            <option value="women">Women</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="color" class="block mb-2">Color</label>
                        <input type="text" id="color" name="color" class="w-full px-4 py-2 border rounded">
                    </div>
                    <div class="imagcontainer flex gap-3">
                        <div class="mb-4">
                            <label for="images" class="block mb-2">Cover image</label>
                            <input type="text" id="images" name="mainImage" placeholder="Paste URL" required class=" w-full">
                        </div>
                        <div class="mb-4">
                            <label for="images" class="block mb-2">image 2 </label>
                            <input type="text" id="images" name="image2" placeholder="Paste URL" required class=" w-full">
                        </div>
                        <div class="mb-4">
                            <label for="images" class="block mb-2">image 3</label>
                            <input required type="text" id="images" placeholder="Paste URL" name="image3" class=" w-full">
                        </div>
                        <div class="mb-4">
                            <label for="images" class="block mb-2">optional image</label>
                            <input type="text" placeholder="Paste URL" id="images" name="image4" class=" w-full">
                        </div>
                        <div class="mb-4">
                            <label for="images" class="block mb-2">optional image</label>
                            <input type="text" placeholder="Paste URL" id="images" name="image5" class=" w-full">
                        </div>
                    </div>
                   
                   <input type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" value="upload">
                </form>
            </div>

        </div>
    </div>

</body>

</html>


</html>

  
